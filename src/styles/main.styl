@import 'normalizecss/normalize.css'

// Style using Bespoke Classes: https://github.com/markdalgleish/bespoke-classes

*
  box-sizing border-box

body
  overflow hidden
  background transparent url('../images/noise.png')
  font-family Calibri, Helvetica
  color #5e5e5e

.bespoke-parent
  perspective 600
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0

section
  width 1000px
  height 700px
  position absolute
  top 50%
  left 50%
  margin-left -500px
  margin-top -350px
  border-left 10px solid #ff9b26
  transform none
  opacity 0
  box-shadow 0 0 20px rgba(0,0,0,0.8)

section.colorbg
  border-left none

section.bespoke-slide
  transition all 0.7s ease
  opacity 0

section.bespoke-active
  opacity 1
  transition-delay .3s
  z-index 1

section.bespoke-inactive
  opacity 0

section.bespoke-before
  transform translateY(-100%)
  opacity 0
  z-index 2

section.bespoke-after
  transform translateY(50%)

.slidebg
  position absolute
  top 0
  right 0
  left 0
  bottom 0
  background-color white
  opacity 0.8

section.colorbg .slidebg
  background linear-gradient(35deg, #d71923 25%, #fab914)

.title
  position absolute
  padding 60px 40px
  line-height 40pt
  font-size 40pt

section.colorbg .title
  color white

.keyword
  color #d71923

.content
  position absolute
  top 200px
  font-size 23pt
  margin-left 100px
  line-height 1.3em

.content.bottom
  bottom 100px
  top auto

.content.pullright
  right 0
  padding-right 40px

.content.pullright:last-of-type
  text-align right

section.colorbg .content
  color white

.emphatic
  background: #222

.emphatic-text
  color: white

img
  position absolute

img.questions
  height 300px
  width 300px
  left 50%
  top 50%
  margin-left -150px
  margin-top -150px

img.springbreak
  height 300px
  width 440px
  left 50%
  top 50%
  margin-left -220px
  margin-top -150px

img.mybag
  height 300px
  width 300px
  right 5%
  top 40%
  margin-left -220px
  margin-top -150px

img.arcgis-users
  width 900px
  left 50%
  margin-left -450px
  bottom 10px

section img.stantec-logo
  height 80px
  bottom 20px
  right 20px

.bespoke-bullet-inactive
  visibility hidden

.smaller
  font-size 1.4em
